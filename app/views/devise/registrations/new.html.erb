<div class="signup">
  <div class="row">
    <div class="medium-6 columns">
      <h2> Sign Up </h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <div class="row validation-error">
      <div class="medium-6 columns">
        <%= devise_error_messages! %>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> First Name
          <%= f.text_field :first_name, pattern: "[a-zA-Z]*", placeholder: 'Alphabets only', autofocus: true %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> Last Name
          <%= f.text_field :last_name, pattern: "[a-zA-Z]*", placeholder: 'Alphabets only', autofocus: true %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label>Address
          <%= f.text_field :address, autofocus: true %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> Suite
          <%= f.text_field :suite, autofocus: true %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> City
          <%= f.text_field :city, pattern: "[a-zA-Z]*", placeholder: 'Alphabets only', autofocus: true %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> State
          <%= f.text_field :state, autofocus: true %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> Gender
          <%= f.select :gender, ["Male", "Female"], autofocus: true %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> Date of Birth
          <%= f.date_field :dob, autofocus: true %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> Email<span class="required">*</span>
          <%= f.email_field :email, pattern: "[A-Z0-9a-z._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,6}", placeholder: 'abc@example.com', autofocus: true %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> Password<span class="required">*</span>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off" %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> Password Confirmation<span class="required">*</span>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <label> Profile Picture
          <%= f.file_field :avatar %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <%= f.submit "Sign up", class: "button" %>
      </div>
    </div>
  <% end %>
</div>